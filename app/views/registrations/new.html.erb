<h2>Register</h2>

<% content_for :content do %>
  <p>Hello</p>
<% end %>

<%= form_with model: @registration do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <% if @registration.errors[:country].any? %>
    <%= render 'errors', errors: @registration.errors.messages[:country] %>
  <% end %>
  <%= f.label :country %>
  <%= f.text_field :country %>

  <% if @registration.errors[:city].any? %>
    <%= render 'errors', errors: @registration.errors.messages[:city] %>
  <% end %>
  <%= f.label :city %>
  <%= f.text_field :city %>

  <p><%= check_box_tag 'terms_of_service' %> Term of service</p>

  <%= f.submit 'Create account' %>
<% end %>

